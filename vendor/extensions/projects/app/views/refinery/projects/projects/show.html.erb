<% content_for :body_content_title do %>
  <%= @project.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @project.name %>
    </p>
  </section>
  <section>
    <h1>Overview</h1>
    <p>
      <%=raw @project.overview %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @project.description %>
    </p>
  </section>
  <section>
    <h1>Icon</h1>
    <p>
      <%= image_fu @project.icon, nil %>
    </p>
  </section>
  <section>
    <h1>Repo</h1>
    <p>
      <%=raw @project.repo %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="projects">
      <% @projects.each do |project| %>
        <li>
          <%= link_to project.name, refinery.projects_project_path(project) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
